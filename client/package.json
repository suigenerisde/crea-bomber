{
  "name": "creabomber-client",
  "version": "1.0.0",
  "description": "CreaBomber macOS client for receiving creative notification overlays",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "tsc",
    "build:mac": "npm run build && electron-builder --mac",
    "dev": "tsc --watch"
  },
  "keywords": [
    "electron",
    "notification",
    "overlay",
    "creabomber"
  ],
  "author": "SUI GENERIS GmbH",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/uuid": "^10.0.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.0",
    "socket.io-client": "^4.8.3",
    "uuid": "^13.0.0"
  },
  "build": {
    "appId": "com.suigeneris.creabomber-client",
    "productName": "CreaBomber",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": null,
      "extendInfo": {
        "LSUIElement": true
      }
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/renderer",
        "to": "renderer"
      },
      {
        "from": "device-config.json",
        "to": "device-config.json"
      }
    ]
  }
}
